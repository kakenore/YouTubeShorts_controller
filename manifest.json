{
  "manifest_version": 3,
  "name": "YouTube Shorts Auto Controller",
  "version": "1.2.0",
  "description": "YouTube Shorts を視聴回数・時間で自動制限し、残り時間を表示。日付が変わると自動リセットします",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
